# app/Dockerfile (Streamlit UI için)

FROM python:3.11-slim

WORKDIR /app

# System deps for Streamlit/Plotly (grafik rendering için)
RUN apt-get update && apt-get install -y \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

# Python deps install (requirements.txt'ten)
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# App code kopyala
COPY . .

EXPOSE 8501

# Streamlit run (headless mod, port 8501)
CMD ["streamlit", "run", "frontend_v3.py", "--server.port=8501", "--server.address=0.0.0.0", "--server.headless=true"]